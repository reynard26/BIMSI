<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_margin="10dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Tutor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/namaTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama Mahasiswa"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID Line"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kode Kelas"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/kodekelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Harga per Minggu"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hargaPerminggu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jumlah Reserve per Minggu"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/jumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnHitung"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/orange"
            android:text="Calculate"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="377dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=":"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Note Pembayaran"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=":"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="top"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/orange"
            android:text="Confirm"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>